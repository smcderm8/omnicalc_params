<h1>Payment Calculation</h1>

<form action="/payment/results">
    <div>
        <label for="apr_input">
            APR
        </label>
    
        <input id="apr_input" type="text" name="the_user_apr" placeholder="e.g. 5.42">
    </div>
    
    <div>
        <label for="years_input">
            Number of years
        </label>
    
        <input id="years_input" type="text" name="the_user_years" placeholder="# of years to repay">
    </div>
    
    <div>
        <label for="principal_input">
            Principal
        </label>
    
        <input id="principal_input" type="text" name="the_user_principal" placeholder="Principal amount">
    </div>
    
    <button>Calculate monthly payment</button>
</form>